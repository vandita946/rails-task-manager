<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
<% if @task.completed %>
    <p><input type="checkbox" checked>
This task is completed</p>
<% else %>
    <p><input type="checkbox">This task is not completed yet</p>
<%end%>

<%= link_to "Back to your tasks", tasks_path %>
</br>
<%= link_to "Edit your task", edit_task_path(@task) %>
</br>
<%= link_to "Delete your task",  task_path(@task), method: :delete, data: { confirm: "You sure bro?" } %>